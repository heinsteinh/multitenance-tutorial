{
  "environment": "production",
  "server": {
    "host": "0.0.0.0",
    "port": 50053,
    "enable_port_reuse": true,
    "max_receive_message_size": 4194304,
    "max_send_message_size": 4194304
  },
  "logging": {
    "level": "info",
    "format": "json",
    "enable_console": true,
    "log_file_path": "/app/logs/server.log",
    "max_file_size": 10485760,
    "max_files": 5
  },
  "database": {
    "type": "sqlite",
    "connection_string": "/app/data/multitenant.db",
    "pool_size": 10,
    "connection_timeout": 30
  },
  "interceptors": {
    "enable_logging": true,
    "enable_auth": true,
    "enable_tenant": true,
    "enable_metrics": true
  },
  "security": {
    "enable_tls": false,
    "cert_file": "",
    "key_file": "",
    "ca_file": "",
    "require_client_auth": false
  }
}
