{
  "environment": "production",
  "server": {
    "host": "0.0.0.0",
    "port": 50053,
    "enable_port_reuse": true,
    "max_receive_message_size": 4194304,
    "max_send_message_size": 4194304
  },
  "logging": {
    "level": "warn",
    "format": "json",
    "enable_console": true,
    "log_file_path": "/var/log/multitenant/server.log",
    "max_file_size": 52428800,
    "max_files": 10
  },
  "interceptors": {
    "enable_logging": true,
    "enable_auth": true,
    "enable_tenant": true,
    "enable_metrics": true
  },
  "database": {
    "type": "sqlite",
    "connection_string": "/var/lib/multitenant/production.db",
    "pool_size": 50,
    "connection_timeout": 60
  },
  "security": {
    "enable_tls": true,
    "cert_file": "/etc/multitenant/certs/server.crt",
    "key_file": "/etc/multitenant/certs/server.key",
    "ca_file": "/etc/multitenant/certs/ca.crt",
    "require_client_auth": false
  }
}
